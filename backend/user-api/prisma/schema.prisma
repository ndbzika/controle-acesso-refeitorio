generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  nome      String
  matricula String?  @unique
  foto      String
  curso     String?
  turma     String?
  // diasAlmoco diasAlmoco[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum diasAlmoco {
  SEGUNDA
  TERCA
  QUARTA
  QUINTA
  SEXTA
  SABADO
  DOMINGO
}
